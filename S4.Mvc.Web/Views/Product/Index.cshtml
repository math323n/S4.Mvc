@model IEnumerable<S4.Entities.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<head>
    <script type="text/javascript" src="~/js/DarkMode.js" async></script>
    <link rel="stylesheet" href="/css/product.css" />
</head>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<Button id="dark">Dark Mode.</Button>
<div class="row d-flex justify-content-center">
    <table id="#productTable" class="table table-sm table-hover table-striped table-responsive table-bordered text-center">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuantityPerUnit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitsInStock)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitsOnOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReorderLevel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discontinued)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier)
                </th>
                <th>
                    Controls
                </th>
            </tr>
        </thead>
        <tbody .table-hover>
            @foreach(var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.QuantityPerUnit)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.UnitsInStock)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.UnitsOnOrder)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ReorderLevel)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Discontinued)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Supplier.CompanyName)
                    </td>
                    <td class="text-center d-inline-flex px-5">
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary m-1 p-4 icon-edit"></a>
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-success m-1 p-4 icon-details"></a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger m-1 p-4 icon-delete"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>