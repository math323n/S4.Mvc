@model IEnumerable<S4.Entities.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-sm table-striped table-responsive">
    <thead>
        <tr>
            <th scope="col">
               ID
            </th>
            <th scope="col">
                Name
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ContactName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ContactTitle)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Fax)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.HomePage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody .table-hover>
@foreach (var item in Model) {
        <tr>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.SupplierId)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.ContactName)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.ContactTitle)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.Fax)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.HomePage)
            </td>
            <td scope="row" >
                <a asp-action="Edit" asp-route-id="@item.SupplierId">Edit</a> <br />
                <a asp-action="Details" asp-route-id="@item.SupplierId">Details</a><br />
                <a asp-action="Delete" asp-route-id="@item.SupplierId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>